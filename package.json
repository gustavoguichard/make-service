{
  "name": "make-service",
  "version": "4.0.2",
  "description": "Some utilities to extend the 'fetch' API to better interact with external APIs.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "keywords": [
    "fetch",
    "api",
    "wrapper",
    "service",
    "typescript"
  ],
  "author": "Gustavo Guichard <@gugaguichard>",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsup ./src/index.ts --format esm,cjs --dts",
    "dev": "tsup ./src/index.ts --format esm,cjs --watch --dts",
    "lint": "node_modules/.bin/biome check --write --error-on-warnings",
    "tsc": "tsc --noEmit",
    "test": "vitest run"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0",
    "@types/node": "^24.0.3",
    "arktype": "^2.1.20",
    "jsdom": "^26.1.0",
    "string-ts": "^2.2.1",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "latest",
    "zod": "3.25.67"
  },
  "peerDependencies": {},
  "files": [
    "README.md",
    "./dist/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gustavoguichard/make-service.git"
  },
  "bugs": {
    "url": "https://github.com/gustavoguichard/make-service/issues"
  }
}
