{
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "outDir": "./tsc/",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020",
    "types": ["vitest/globals", "node"]
  }
}
